my $b_log = 0;
my $b_log_colors = 0;
my $b_log_full = 0;
my $b_root = 0;
my $b_running_in_display = 0;
my $b_update = 1;
my $b_weather = 1;

## System
my $bsd_type = '';
my $cpu_sleep = 0.3;
